<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>yoke.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>axevolant</object-name>
    <object-name>volant</object-name>
    
    <!-- Objets transparents -->
  </animation>

  <animation>
    <name>AllYokes</name>
    <object-name>axevolant</object-name>
    <object-name>volant</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>AllYokes</object-name>
    <property>controls/flight/elevator</property>
    <factor> -10 </factor>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>volant</object-name>
    <property>controls/flight/aileron</property>
    <factor> -30 </factor>
    <center>
      <x-m> 0.01668 </x-m>
      <y-m> 0.00000 </y-m>
      <z-m> 0.61451 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>
